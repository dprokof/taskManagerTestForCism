{
  "swagger": "2.0",
  "info": {
    "title": "Task Manager API",
    "version": "1.0.0",
    "description": "API для управления задачами"
  },
  "paths": {
    "/tasks": {
      "post": {
        "summary": "Создание новой задачи",
        "responses": {
          "201": {
            "description": "Задача успешно создана",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "example": 1
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Получение списка задач",
        "responses": {
          "200": {
            "description": "Список задач",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "status": {
                    "type": "string",
                    "example": "New"
                  },
                  "created_at": {
                    "type": "string",
                    "example": "2024-12-17T10:00:00"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "summary": "Получение информации о задаче по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о задаче",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "example": 1
                },
                "status": {
                  "type": "string",
                  "example": "New"
                },
                "created_at": {
                  "type": "string",
                  "example": "2024-12-17T10:00:00"
                },
                "updated_at": {
                  "type": "string",
                  "example": "2024-12-17T10:05:00"
                }
              }
            }
          }
        }
      }
    }
  }
}
